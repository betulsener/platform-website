# ===============================
# Django Environment Variables
# ===============================

# DEBUG mode (True for development, False for production)
DEBUG=True

# Django secret key (replace with your own secure key in .env)
SECRET_KEY=your-secret-key-here

# Database configuration (default is SQLite)
# For SQLite, keep this format: sqlite:///db.sqlite3
# For PostgreSQL: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=sqlite:///db.sqlite3

# Allowed hosts (comma-separated, e.g., localhost,127.0.0.1,mydomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Time zone
TIME_ZONE=UTC

# Default language
LANGUAGE_CODE=en-us

# Media folder
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Static files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/

